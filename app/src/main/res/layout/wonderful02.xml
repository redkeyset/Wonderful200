    <Button
        android:id="@+id/btnZFPlay"
        style="@style/style_main_item"
        android:text="ZFPlayPassword" />
    <Button
        android:id="@+id/btnAZSort"
        style="@style/style_main_item"
        android:text="AZSort" />

    <Button
        android:id="@+id/btnImageFDScrollView"
        style="@style/style_main_item"
